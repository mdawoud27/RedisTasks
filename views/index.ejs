<style>
  .del:checked + span {
    color: red;
  }

  ul {
    list-style: none;
  }
</style>

<form method="post" action="/task/add">
  <label for="task">Add Tasks</label>
  <input type="text" name="task" placeholder="Add Task" />
  <input type="submit" value="Submit" />
</form>

<%= title %>

<form method="post" action="/task/delete">
  <ul>
    <% tasks.forEach(task => { %>
    <li>
      <label for="">
        <input
          type="checkbox"
          name="tasks"
          class="del"
          value="<%= task %>"
        /><span><%= task %></span>
      </label>
    </li>
    <% }) %>
  </ul>
  <input type="submit" value="Remove">
</form>
